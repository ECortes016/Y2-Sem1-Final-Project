<!doctype html>
<html lang="en">

<head>
    <title>Cryptocurrency</title>
    <?- include ('partials/head') ?>
    <link rel="stylesheet" href="css/crypto.css">
</head>

<body id="body">
    <?- include ('partials/navbar') ?>
    <div class="jumbotron jumbotron-fluid top">
        <div class="container">
            <h1 class="display-3">Cryptocurrency Coin Rankings</h1>
            <p class="lead"></p>
            <hr class="my-2">
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Symbol</th>
            </tr>
        </thead>
        <tbody>
            <? coin.forEach((item) => { ?>
            <tr>
                <th scope="row"><?= item.rank ?></th>
                <td><a href="cryptocurrency/coin-info/<?= item.id ?>"><?= item.name ?></a></td>
                <td><?= item.price ?></td>
                <td><?= item.symbol ?></td>
            </tr>
            <? }) ?>

        </tbody>
    </table>
    <?- include ('partials/footer') ?>
</body>

</html>